{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - My Categories
{% endblock %}

{% block content %}
    {% for category in var_categories %}
        <div class="row">
            <article class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                <h1><a href="/category.php?id=">{{ category.id }}</a>{{ category.name }}</h1>
                <img title="{{ category.name }}" src="{{ category.image }}" alt="{{ category.name }}"/>
            </article>
        </div>
    {% endfor %}
{% endblock %}