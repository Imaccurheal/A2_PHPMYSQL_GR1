{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - MY Admin Category
{% endblock %}

{% block content %}
    <h1>Administration: List Categories <a class="btn btn-primary" href="/A2_PHPMYSQL_GR1/admin-category-add.php">Add <span class="glyphicon glyphicon-plus-sign"></span></a></h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>

        {% for category in var_categories %}
            <tr>
                <td><a href="/A2_PHPMYSQL_GR1/article.php?id={{ category.id }}" target="_blank">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td><img src="{{ category.image }}" alt="{{ category.name }}" width="50" height="35"></td>
                <td><a href="/A2_PHPMYSQL_GR1/admin-category-edit.php?id={{ category.id }}">Edit</a></td>
                <td><a href="/A2_PHPMYSQL_GR1/admin-category-delete.php?id={{ category.id }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}