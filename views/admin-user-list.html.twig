{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - MY Admin Users
{% endblock %}

{% block content %}
    <h1>Administration: List Users <a class="btn btn-primary" href="/A2_PHPMYSQL_GR1/admin-user-add.php">Add <span class="glyphicon glyphicon-plus-sign"></span></a></h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Role</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>

        {% for user in var_users %}
            <tr>
                <td><a href="/A2_PHPMYSQL_GR1/article.php?id={{ user.id }}" target="_blank">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{% if role is defined and true %}<span class="label label-primary">Admin</span>{% else %}<span class="label label-default">Default</span>{% endif %}</td>
                <td><a href="/A2_PHPMYSQL_GR1/admin-user-edit.php?id={{ user.id }}">Edit</a></td>
                <td><a href="/A2_PHPMYSQL_GR1/admin-user-delete.php?id={{ user.id }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}